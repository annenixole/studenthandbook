<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Background image at bottom -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/splashscreen_background"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="@string/splash_background" />

    <!-- Green overlay with light opacity -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bulsu_green"
        android:alpha="0.9" />

    <!-- Big logo layer with glow (initial state) - NOT in container -->
    <FrameLayout
        android:id="@+id/logoBigContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <!-- Yellow glow for big logo -->
        <View
            android:id="@+id/glowBig"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_gravity="center"
            android:background="@drawable/logo_glow_gradient_big" />

        <!-- Big logo -->
        <ImageView
            android:id="@+id/logoBig"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:contentDescription="@string/bulsu_logo"
            android:src="@drawable/splashscreen_logo"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <!-- Centered content container - THIS IS THE FINAL LAYOUT -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:layout_marginTop="-80dp"
        android:alpha="0">

        <!-- Logo container with glow effect -->
        <FrameLayout
            android:id="@+id/logoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- Yellow glow background -->
            <View
                android:id="@+id/logoGlow"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/logo_glow_gradient" />

            <!-- Logo - this will morph from big to small -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:contentDescription="@string/bulsu_logo"
                android:src="@drawable/splashscreen_logo" />
        </FrameLayout>

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title_splash"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_subtitle_splash"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="60dp" />

        <!-- Loading progress bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:progressDrawable="@drawable/progress_bar_style"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:layout_marginBottom="16dp" />

        <!-- Loading text -->
        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_handbook"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Footer text at bottom -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/splash_footer"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingBottom="32dp"
        android:alpha="0" />

</FrameLayout>
